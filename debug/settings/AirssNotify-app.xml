    <filename>reflact AG FLV-Player</filename>
    <id>reflactAGFLVPlayer</id>
    <version>v4</version>
   
    <description>
        <!-- Displayed in the AIR application installer. (Optional) -->
    </description>
    <installFolder>reflactSoftware</installFolder>
    
